@model Adresar.Models.KontaktUnosViewModel

<div class="col-sm-6">
@Html.Partial("~/Views/Home/_EditKontakt.cshtml", Model.Kontakt);
</div>

<div class="col-sm-6">
    <h4>Brojevi</h4>
    <hr />

    <table class="table">
        <tr>
            <th>
                Broj
            </th>
            <th>
                Tip
            </th>
            <th>
                Opis
            </th>
        </tr>
        @foreach (var item in Model.Unosi)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Broj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
            </tr>
        }
    </table>

    @Html.Partial("~/Views/Home/_Unos.cshtml", Model.PrazanUnos);
</div>

@Html.ActionLink("Nazad", "Index")